@using DataRepository;
@using learnwebTDD.Core.Plugging;
@using Netko.Common.Util.Seo;
@model learnwebTDD.Core.Models.Tagindex

@{
    ViewBag.Title = Model._pagetitle+"-"+Model._subpagetitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="well form-search">
  <input type="text" class="input-xlarge search-query"  placeholder="Type something…">
  <button type="submit" class="btn">Search</button>
</form>
      <hr>

  <!-- Example row of columns -->
     <div class="container-fluid">
  <div class="row-fluid">
          <h1>ProblemTag </h1>
    <p> Using the right tags makes it easier for others to find and solve the problem</p>
        <div class="row-fluid">
      <div class="span10">
          @foreach (var item in Model.tagpage.Items)
    {
    <div class="span3"><h3><a href="/home/tag/@this.Server.UrlEncode(item.title)/">@item.title</a></h3> </div>
    }
          </div>
      <div class="span2">
          Web site is in building
      </div>
            </div>
       <div class="span12">
      @Html.Pager("page1", (int)Model.tagpage.CurrentPage, (int)Model.tagpage.TotalItems, Model.pageurl, pageSize: (int)Model.tagpage.ItemsPerPage)
      </div>
      </div>
         </div>
